{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Bash(pnpm lint:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build-package)",
      "Bash(cat :*)",
      "Bash(ls :*)",
      "Bash(grep :*)",
      "Bash(find :*)",
      "Bash(head :*)",
      "Bash(tail :*)"
    ],
    "deny": [
      "Bash(rm -rf :*)",
      "Bash(git push :*)",
      "Bash(pnpm publish :*)",
      "Bash(npm publish :*)",
      "Bash(chmod :*)",
      "Bash(sudo :*)"
    ]
  }
}
