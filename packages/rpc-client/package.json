{
  "name": "@kyber/rpc-client",
  "type": "module",
  "version": "0.0.1",
  "description": "RPC client with automatic rotation and fallback for KyberSwap",
  "scripts": {
    "type-check": "tsc --noEmit",
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./fetch": {
      "types": "./dist/fetch.d.ts",
      "import": "./dist/fetch.js",
      "require": "./dist/fetch.js",
      "default": "./dist/fetch.js"
    },
    "./provider": {
      "types": "./dist/provider.d.ts",
      "import": "./dist/provider.js",
      "require": "./dist/provider.js",
      "default": "./dist/provider.js"
    },
    "./endpoints": {
      "types": "./dist/endpoints.d.ts",
      "import": "./dist/endpoints.js",
      "require": "./dist/endpoints.js",
      "default": "./dist/endpoints.js"
    }
  },
  "devDependencies": {
    "@kyber/eslint-config": "workspace:*",
    "@kyber/typescript-config": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@kyber/schema": "workspace:*"
  },
  "peerDependencies": {
    "@ethersproject/providers": "^5.7.0"
  },
  "peerDependenciesMeta": {
    "@ethersproject/providers": {
      "optional": true
    }
  }
}
