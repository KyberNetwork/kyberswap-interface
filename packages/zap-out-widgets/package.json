  "devDependencies": {
    "@kyber/eslint-config": "workspace:*",
    "@kyber/svgr-esbuild-plugin": "workspace:^",
    "@kyber/tailwind-config": "workspace:^",
    "@kyber/ui": "workspace:^",
    "@kyber/schema": "workspace:^",
    "@kyberswap/liquidity-chart": "workspace:^",
    "@kyber/hooks": "workspace:^",
    "@kyber/utils": "workspace:^",
