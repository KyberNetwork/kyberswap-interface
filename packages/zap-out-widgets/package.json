    "@babel/core": "^7.26.0",
    "babel-plugin-macros": "^3.1.0",
    "esbuild-plugin-babel": "^0.2.3",
    "@types/lodash": "^4.14.196",
    "@types/numeral": "^2.0.5",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.20",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.47",
