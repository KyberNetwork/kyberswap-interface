{
  "name": "@kyberswap/zap-out-widgets",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/zap-out-widget.js",
      "require": "./dist/zap-out-widget.cjs"
    },
    "./dist/style.css": "./dist/zap-out-widget.css"
  },
  "main": "./dist/zap-out-widget.cjs",
