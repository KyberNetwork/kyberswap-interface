  "types": "./dist/zap-out-widget.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm run i18n:compile && tsup",
    "dev": "pnpm run i18n:compile && tsup --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "prepublishOnly": "pnpm run i18n:compile && tsc && tsup",
    "type-check": "tsc --noEmit",
    "i18n": "pnpm run i18n:extract && pnpm run i18n:compile",
    "i18n:compile": "lingui compile",
    "i18n:extract": "lingui extract"
